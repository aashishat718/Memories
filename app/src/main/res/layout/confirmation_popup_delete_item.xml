<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="20dp">

            <TextView
                android:id="@+id/conf_delete_text_alert"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/sure_delete"
                android:layout_centerHorizontal="true"
                android:padding="6dp"
                android:textStyle="bold"
                android:textSize="24sp" />

            <TextView
                android:id="@+id/conf_delete_yes_id"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/yes_text"
                android:textSize="18sp"
                android:layout_below="@+id/conf_delete_text_alert"
                android:layout_marginLeft="180dp"
                android:layout_marginTop="30dp" />

            <TextView
                android:id="@+id/conf_delete_no_id"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/no_text"
                android:textSize="18sp"
                android:layout_below="@+id/conf_delete_text_alert"
                android:layout_marginLeft="260dp"
                android:layout_marginTop="30dp" />

        </RelativeLayout>
    </androidx.cardview.widget.CardView>

</LinearLayout>